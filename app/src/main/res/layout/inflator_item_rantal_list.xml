<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llHelpList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOcsLockName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockIsUserMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="visible"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="visible"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="visible"
                tools:text="CJ123456" />

            <TextView
                android:id="@+id/tvOcsLockRssi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                tools:text="CJ123456" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tvOcsLockUnLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/design_default_color_error"
                android:gravity="center"
                android:padding="5dp"
                android:visibility="gone"
                android:text="@string/lock_unlock"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:text="@string/lock_unlock" />

        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
